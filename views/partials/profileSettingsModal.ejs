<!-- Modal -->
<div id="profileSettingsModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Your Profile Settings</h4>
            </div>
            <div class="modal-body row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <form method="post" id="uploadListing">
                            <div class="form-group ">
                                <label class="control-label " for="item">Change Your Username</label>
                                <input class="form-control" id="item" name="item" type="text" minlength="2" required/>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="cs1">Change Your Location</label>
                                <input class="control-label" id="cs1" name="country" type="text" />
                            </div>
                            <div class="form-group">
                                <div>
                                    <button class="btn btn-primary" style="float:right;" id="submitpost" name="submitpost" type="submit">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/js/jquery.validate.js"></script>
<script src="/js/postad.js"></script>
<script src="/js/jquery.countryselector.min.js"></script>
<script>
    var loaded = false;
    $('#profileSettingsModal').on('shown.bs.modal', function() {
        if (!loaded) {
            $("#cs1").countrySelector();
            loaded = true;
        }
    });
</script>
