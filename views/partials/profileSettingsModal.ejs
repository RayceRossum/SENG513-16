<!-- Modal -->
<div id="profileSettingsModal" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Edit Your Profile Settings</h4>
            </div>
            <div class="modal-body row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <form method="post" id="uploadListing">
                            <div class="form-group">
                                <label class="control-label " for="username">Change Your Username</label>
                                <input class="form-control" id="username" name="username" type="text" minlength="2" required/>
                                <small id="username" class="form-text text-muted">Usernames must be greater than one character.</small>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="profileSettingsCS">Edit Your Location</label>
                                <input class="control-label" id="profileSettingsCS" name="country" type="text"/>
                            </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" id="updateProfile" name="updateProfile" type="submit">Update</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
            </form>
        </div>
    </div>
</div>

<script>
    var loaded = false;
    $('#profileSettingsModal').on('shown.bs.modal', function() {
        if (!loaded) {
            $("#profileSettingsCS").countrySelector();
            loaded = true;
        }
    });
</script>
